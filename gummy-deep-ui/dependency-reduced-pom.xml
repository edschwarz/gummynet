<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>gummynet</artifactId>
    <groupId>com.earware</groupId>
    <version>0.1.1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.earware.gummynet</groupId>
  <artifactId>gummy-deep-ui</artifactId>
  <packaging>war</packaging>
  <name>gummy-deep-ui</name>
  <version>${project.version}</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <id>package-jar</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>com.earware.gummynet:gummy-deep:*</exclude>
                  <exclude>org.nd4:*</exclude>
                  <exclude>org.deeplearning4j:*</exclude>
                  <exclude>org.bytedeco:*</exclude>
                </excludes>
              </artifactSet>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.github.eirslett</groupId>
        <artifactId>frontend-maven-plugin</artifactId>
        <version>1.6</version>
        <executions>
          <execution>
            <id>install node and npm</id>
            <goals>
              <goal>install-node-and-npm</goal>
            </goals>
          </execution>
          <execution>
            <id>npm install</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>npm</goal>
            </goals>
          </execution>
          <execution>
            <id>webpack build</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>webpack</goal>
            </goals>
            <configuration>
              <environmentVariables>
                <WAR_NAME>${project.build.finalName}</WAR_NAME>
              </environmentVariables>
            </configuration>
          </execution>
        </executions>
        <configuration>
          <nodeVersion>v8.11.1</nodeVersion>
          <npmVersion>5.6.0</npmVersion>
          <installDirectory>.</installDirectory>
          <workingDirectory>.</workingDirectory>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>com.earware.gummynet</groupId>
      <artifactId>gummy-deep</artifactId>
      <version>0.1.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.deeplearning4j</groupId>
      <artifactId>rl4j-examples</artifactId>
      <version>0.9.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.deeplearning4j</groupId>
      <artifactId>deeplearning4j-ui_2.11</artifactId>
      <version>0.9.1</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>deeplearning4j-play_2.11</artifactId>
          <groupId>org.deeplearning4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>commons-io</artifactId>
          <groupId>commons-io</groupId>
        </exclusion>
        <exclusion>
          <artifactId>deeplearning4j-nlp</artifactId>
          <groupId>org.deeplearning4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>nd4j-jackson</artifactId>
          <groupId>org.nd4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>deeplearning4j-ui-model</artifactId>
          <groupId>org.deeplearning4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>deeplearning4j-ui-resources</artifactId>
          <groupId>org.deeplearning4j</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.earware.gummynet</groupId>
      <artifactId>gummy-gin</artifactId>
      <version>0.1.1</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <jersey.version>2.25</jersey.version>
    <rl4j.version>0.9.1</rl4j.version>
    <jetty.version>9.2.14.v20151106</jetty.version>
  </properties>
</project>

