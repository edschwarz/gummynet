<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>gummynet</artifactId>
    <groupId>com.earware</groupId>
    <version>0.1.1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.earware.gummynet</groupId>
  <artifactId>gummy-deep-ui</artifactId>
  <packaging>war</packaging>
  <name>gummy-deepi-ui</name>
  <version>${project.version}</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.4</version>
        <executions>
          <execution>
            <id>package-jar</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
              <transformers>
                <transformer>
                  <resource>reference.conf</resource>
                </transformer>
                <transformer />
                <transformer>
                  <mainClass>org.earware.gummynet.deep.ui.GNERestServer</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.deeplearning4j</groupId>
      <artifactId>rl4j-examples</artifactId>
      <version>0.9.1</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.deeplearning4j</groupId>
      <artifactId>deeplearning4j-ui_2.11</artifactId>
      <version>0.9.1</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>deeplearning4j-play_2.11</artifactId>
          <groupId>org.deeplearning4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>commons-io</artifactId>
          <groupId>commons-io</groupId>
        </exclusion>
        <exclusion>
          <artifactId>deeplearning4j-nlp</artifactId>
          <groupId>org.deeplearning4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>nd4j-jackson</artifactId>
          <groupId>org.nd4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>deeplearning4j-ui-model</artifactId>
          <groupId>org.deeplearning4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>deeplearning4j-ui-resources</artifactId>
          <groupId>org.deeplearning4j</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.earware.gummynet</groupId>
      <artifactId>gummy-gin</artifactId>
      <version>0.1.1</version>
      <scope>provided</scope>
    </dependency>
  </dependencies>
  <properties>
    <jersey.version>2.25</jersey.version>
    <rl4j.version>0.9.1</rl4j.version>
    <jetty.version>9.2.14.v20151106</jetty.version>
  </properties>
</project>

